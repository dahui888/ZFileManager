<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/app_name"
            android:textColor="@color/zfile_file_title"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/file_extension"
            android:textColor="@color/title_tv_cancel_text_color"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_back_normal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/super_picTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_picture"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_videoTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_video"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_audioTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_audio"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_fileTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_text"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_wpsTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_wps"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_apkTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_apk"
                    android:textColor="@color/btn_search_activity_cancel" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/zfile_line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/super_fragment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_fragment"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_java"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_java"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_dsl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_dsl"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_qqTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_qq"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_wechatTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_we_chat"
                    android:textColor="@color/btn_search_activity_cancel" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/zfile_line_color" />

                <TextView
                    android:id="@+id/super_otherTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/file_placeholder"
                    android:textColor="@color/btn_search_activity_cancel" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp">

            <TextView
                android:id="@+id/super_innerTxt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_back_normal"
                android:gravity="center"
                android:text="@string/file_phone_storage"
                android:textColor="@color/zfile_file_title" />

        </FrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

