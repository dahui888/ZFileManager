<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="@string/zfile_info_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zfile_info_name" />

        <TextView
            android:id="@+id/zfile_dialog_info_fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zfile_file_title"
            tools:text="aaa.mp3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zfile_info_type" />

        <TextView
            android:id="@+id/zfile_dialog_info_fileType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zfile_file_title"
            tools:text="aaa.mp3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zfile_info_size" />

        <TextView
            android:id="@+id/zfile_dialog_info_fileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zfile_file_title"
            tools:text="aaa.mp3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zfile_info_time" />

        <TextView
            android:id="@+id/zfile_dialog_info_fileDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zfile_file_title"
            tools:text="aaa.mp3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zfile_info_path" />

        <TextView
            android:id="@+id/zfile_dialog_info_filePath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zfile_file_title"
            tools:text="aaa.mp3" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/zfile_dialog_info_moreBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:text="@string/zfile_info_more"
        android:textColor="@color/zfile_file_title"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/zfile_dialog_info_moreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/zfile_dialog_info_fileDurationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfile_info_duration" />

            <TextView
                android:id="@+id/zfile_dialog_info_fileDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfile_info_loadding"
                android:textColor="@color/zfile_file_title"
                tools:text="aaa.mp3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/zfile_dialog_info_fileFBLLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfile_info_wh" />

            <TextView
                android:id="@+id/zfile_dialog_info_fileFBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfile_info_duration"
                android:textColor="@color/zfile_file_title"
                tools:text="aaa.mp3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="7dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zfile_info_other" />

            <TextView
                android:id="@+id/zfile_dialog_info_fileOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zfile_file_title"
                tools:text="aaa.mp3" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/zfile_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <Button
            android:id="@+id/zfile_dialog_info_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#00000000"
            android:text="@string/zfile_down"
            android:textColor="@color/permission_btn_back" />

    </RelativeLayout>

</LinearLayout>