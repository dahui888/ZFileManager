<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zj.file.ui.ZFileVideoPlayer
        android:id="@+id/sun_videoPlayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sun_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

    <LinearLayout
        android:id="@+id/sun_titleLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sun_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录后更加精彩"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="为吾王的诞生献上这血与泪编制的罪恶王冠" />

    </LinearLayout>

    <TextView
        android:id="@+id/sun_txt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="未注册手机验证后完成注册"
        android:textSize="13sp"
        android:textColor="#B5B5C3"
        app:layout_constraintEnd_toEndOf="@+id/sun_titleLayout"
        app:layout_constraintStart_toStartOf="@+id/sun_titleLayout"
        app:layout_constraintTop_toBottomOf="@+id/sun_titleLayout" />

    <LinearLayout
        android:id="@+id/sun_phoneBg1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_sun_phone_edit"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/sun_titleLayout"
        app:layout_constraintStart_toStartOf="@+id/sun_titleLayout"
        app:layout_constraintTop_toBottomOf="@+id/sun_txt1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="+ 86"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_sjx" />

        <EditText
            android:id="@+id/sun_phoneEdit1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机号"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/sun_loginBtn2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="@drawable/shape_sun_login_btn"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/sun_titleLayout"
        app:layout_constraintStart_toStartOf="@+id/sun_titleLayout"
        app:layout_constraintTop_toBottomOf="@+id/sun_phoneBg1" />

    <TextView
        android:id="@+id/sun_pwdtxt"
        android:textColor="#FFFFFF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="账号密码登录"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/sun_titleLayout"
        app:layout_constraintTop_toBottomOf="@+id/sun_loginBtn2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:text="其他登录方式"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="@+id/sun_titleLayout"
        app:layout_constraintBottom_toTopOf="@+id/sun_other"/>

    <LinearLayout
        android:id="@+id/sun_other"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/sun_titleLayout"
        app:layout_constraintStart_toStartOf="@+id/sun_titleLayout"
        app:layout_constraintBottom_toTopOf="@+id/sun_xytxt"
        android:layout_marginBottom="20dp"
        android:gravity="start|center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_qq" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_we_chat"
            android:layout_marginStart="30dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_alipay" />

    </LinearLayout>

    <TextView
        android:id="@+id/sun_xytxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/sun_titleLayout"
        app:layout_constraintStart_toStartOf="@+id/sun_titleLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:text="登录即同意《用户协议》和《隐私政策》"/>

</androidx.constraintlayout.widget.ConstraintLayout>